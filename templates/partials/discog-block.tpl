<div class="row">
    <!-- BEGIN discoginfo -->
        <div class="col-md-6">
            <div class="github-issue panel panel-default">
                <div class="panel-body">
                    <div class="meta">
                        <img title="{results.catno}" src="{results.thumb}" class="author-picture">
                        <a target="_blank" href="http://discogs.com{results.uri}">{results.title}</a><br>
                        <span class="number">Released: {results.year}</span><br>
                        <span class="">Label: {results.label}</span>
                    </div>
                    <h3>
                        <span class="label label-default pull-right">{results.style}</span>
                    </h3>
                </div>
            </div>
        </div>
    <!-- END discoginfo -->
</div>